		{
			"name": "Create New Product",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"description": "Manager or Admin token required"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Classic White T-Shirt\",\n  \"description\": \"Premium cotton t-shirt with comfortable fit\",\n  \"price\": 299.99,\n  \"productCode\": \"TSH001\",\n  \"originalPrice\": 399.99,\n  \"category\": 1,\n  \"style\": 1,\n  \"productType\": 1,\n  \"storeActivity\": 1,\n  \"fabricType\": \"Cotton\",\n  \"subCategory\": \"Basic Tees\",\n  \"brandName\": \"Fashion Brand\",\n  \"availableSizes\": [\"S\", \"M\", \"L\", \"XL\"],\n  \"availableColors\": [\"White\", \"Black\", \"Gray\"],\n  \"imageUrls\": [\n    \"https://example.com/images/tshirt-front.jpg\",\n    \"https://example.com/images/tshirt-back.jpg\"\n  ],\n  \"tags\": [\"Casual\", \"Comfortable\", \"Basic\"],\n  \"isNewCollection\": false,\n  \"isBestSeller\": false,\n  \"isOnSale\": true,\n  \"storeCategoryId\": 1\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/items",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"items"
					]
				},
				"description": "Create a new product with all required fields"
			},
			"response": []
		},
